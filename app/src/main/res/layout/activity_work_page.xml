<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.workwork.WorkPage">

    <LinearLayout
        android:id="@+id/A1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayoutWord1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <Space
                android:layout_width="@dimen/SpaceRegistrationPage"
                android:layout_height="@dimen/SpaceRegistrationPage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: " />

                <TextView
                    android:id="@+id/txtName_User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="User" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: " />

                <TextView
                    android:id="@+id/txtDayWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="User" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time S: " />

                <TextView
                    android:id="@+id/txtTimeStarWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Time S" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TimeW: " />

                <TextView
                    android:id="@+id/txtTimeWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Time W" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time++: " />

                <TextView
                    android:id="@+id/txtEtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="E time" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

        </LinearLayout>


    </LinearLayout>


    <ScrollView
        android:layout_below="@+id/A1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/cartViewImageWork1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:id="@+id/linearLayoutWord2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cartViewImageWork"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:color/black" />
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottie_scan_star"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:lottie_rawRes="@raw/scanning_nearby"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                android:visibility="gone"/>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/cartViewImageWork"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="StartWork"
                                android:gravity="center"
                                android:textSize="20dp"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/SSSSSSStarCart"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/buttonStarWord"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:lottie_rawRes="@raw/start"
                                    app:lottie_loop="true"
                                    app:lottie_autoPlay="true"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    cart 2  -->

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/cartViewImageWork1"
                android:id="@+id/cartViewImageWork3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:id="@+id/linearLayoutWord4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cartViewImageWork4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:color/black" />
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottie_scan_end"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:lottie_rawRes="@raw/scanning_nearby"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                android:visibility="gone"/>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/cartViewImageWork4"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewEndWork"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="StartEndWork"
                                android:gravity="center"
                                android:textSize="20dp"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/EEEEEECart"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/buttonEndWord"
                                    android:layout_width="match_parent"
                                    android:layout_height="67dp"
                                    android:scaleType="centerCrop"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/end_b" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    cart3   -->

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/cartViewImageWork3"
                android:id="@+id/cartViewImageWorkUpdateDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:id="@+id/linearLayoutWord5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cartViewImageWork5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:color/black" />
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottie_Update"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:lottie_rawRes="@raw/scanning_nearby"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                android:visibility="gone"/>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/cartViewImageWork5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewInfor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Infor"
                                android:gravity="center"
                                android:textSize="20dp"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/UUUUUUUcart"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/buttonInfor"
                                    android:layout_width="match_parent"
                                    android:layout_height="67dp"
                                    android:scaleType="centerCrop"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/end_b" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>