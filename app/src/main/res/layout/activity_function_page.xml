<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FunctionPage"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/mobile_app_background_space" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imagesssss"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            tools:layout_editor_absoluteX="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/beth_ellen"
                android:text="what will you do \n today ???"
                android:textColor="#ffff"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imagesssss">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="@dimen/SpaceRegistrationPage"
                        android:layout_height="@dimen/SpaceRegistrationPage" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/World"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/supercharge_your_work" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Work"
                            android:textColor="#ED1000"
                            android:textSize="25dp" />

                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="@dimen/SpaceRegistrationPage"
                        android:layout_height="@dimen/SpaceRegistrationPage" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        app:lottie_rawRes="@raw/scanning_nearby" />

                    <Space
                        android:layout_width="@dimen/SpaceRegistrationPage"
                        android:layout_height="@dimen/SpaceRegistrationPage" />


                </LinearLayout>


                <Space
                    android:layout_width="@dimen/SpaceRegistrationPage"
                    android:layout_height="@dimen/SpaceRegistrationPage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="@dimen/SpaceRegistrationPage"
                        android:layout_height="@dimen/SpaceRegistrationPage" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/texi_car_app_lottie_animation" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Map"
                            android:textColor="#FFFF"
                            android:textSize="25dp" />

                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="@dimen/SpaceRegistrationPage"
                        android:layout_height="@dimen/SpaceRegistrationPage" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cartFunctionEat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            app:lottie_rawRes="@raw/eat_drink"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Eat"
                            android:textColor="#000107"
                            android:textSize="25dp" />


                    </androidx.cardview.widget.CardView>



                    <Space
                        android:layout_width="@dimen/SpaceRegistrationPage"
                        android:layout_height="@dimen/SpaceRegistrationPage" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>